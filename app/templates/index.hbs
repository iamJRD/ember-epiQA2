<div class="row text-center">
  <div class="col-sm-6">
    <h2 class="homeHeaders">Questions:</h2>
      <ul id="questionList">
        {{#each model.questions as |question|}}
          <div class="displayBox">
            <li>{{question-tile question=question}} {{question-answers question}}</li>
          </div>
        {{/each}}
      </ul>
  </div>

  <div class="col-sm-6">
    <h2 class="homeHeaders">Post a Question:</h2>
      {{new-question question=question saveQuestion2="saveQuestion3"}}
  </div>
</div>
