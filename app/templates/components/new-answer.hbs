{{#if addAnswerForm}}
  <h3>Answer this Question!</h3>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author: </label>
          {{input class="textbox" value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="content">Answer Content: </label>
          {{textarea rows="10" cols="50" class="textboxArea" value=content id="content"}}
        </div>

        <button {{action 'saveAnswer'}} class="btn btn-success">Answer Question!</button>
      </form>
    </div>
{{else}}
  <button {{action 'answerFormShow'}} class="btn btn-primary" id="answerQuestionBtn">Answer this Question!</button>
{{/if}}
